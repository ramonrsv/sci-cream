{
  "name": "@workspace/sci-cream-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prerequisites": "pnpm --dir ../sci-cream build:package",
    "build": "next build",
    "test": "pnpm test:unit && pnpm test:e2e && pnpm test:visual",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --project chromium firefox webkit mobile-chrome mobile-safari",
    "test:e2e:ui": "pnpm test:e2e --ui",
    "test:visual": "playwright test --project visual",
    "test:visual:update": "pnpm test:visual --update-snapshots",
    "lint": "eslint ./src --max-warnings=0",
    "prettier": "prettier --check ./src",
    "coverage": "vitest run --coverage",
    "bench": "pnpm bench:unit && pnpm bench:e2e",
    "bench:unit": "node --import tsx src/__benches__/unit/run-all.ts",
    "bench:e2e": "playwright test --project benches --reporter='dot'",
    "dev": "pnpm dev:turbopack",
    "dev:turbopack": "next dev --turbopack",
    "dev:webpack": "next dev --webpack",
    "start": "next start",
    "seed-db": "npx drizzle-kit push && pnpm tsx ./src/lib/db/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@workspace/sci-cream": "workspace:*",
    "chart.js": "^4.5.1",
    "chartjs-chart-error-bars": "^4.4.5",
    "colord": "^2.9.3",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "pg": "^8.18.0",
    "react": "^19.2.4",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.4",
    "react-grid-layout": "^2.2.2",
    "react-resizable": "^3.1.3",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest-canvas-mock": "^1.1.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/benchmark": "^2.1.5",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "4.0.16",
    "benchmark": "^2.1.4",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.0",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
