{
  "name": "@workspace/sci-cream",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:rust && pnpm run build:wasm && pnpm run build:js",
    "build:rust": "cargo rustc --features wasm --crate-type=cdylib",
    "build:wasm": "wasm-pack build --out-dir wasm --out-name index -- --features wasm",
    "build:js": "vite build",
    "test": "pnpm run test:rust:wasm && pnpm run test:js",
    "test:rust:wasm": "cargo test --features wasm",
    "test:js": "pnpm run build:wasm && pnpm run build:js && vitest run",
    "lint": "cargo clippy --features wasm"
  },
  "dependencies": {
    "typescript": "5.7.3",
    "vite": "6.0.7",
    "vite-plugin-wasm": "3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vite-plugin-wasm": "3.0.0",
    "vitest": "^3.2.4"
  }
}
