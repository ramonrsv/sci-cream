{
  "name": "@workspace/sci-cream",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:rust && pnpm run build:wasm && pnpm run build:js",
    "build:rust": "cargo rustc --features wasm --crate-type=cdylib",
    "set-crate-type:cdylib": "./scripts/set-crate-type.sh ./Cargo.toml cdylib",
    "set-crate-type:rlib": "./scripts/set-crate-type.sh ./Cargo.toml rlib",
    "wasm-pack-build": "wasm-pack build --out-dir wasm --out-name index -- --features wasm",
    "build:wasm": "pnpm run set-crate-type:cdylib && pnpm run wasm-pack-build && pnpm run set-crate-type:rlib",
    "build:js": "vite build",
    "test": "pnpm run test:rust && pnpm run test:js",
    "test:rust": "cargo test --features wasm",
    "test:js": "pnpm run build:wasm && pnpm run build:js && vitest run",
    "lint": "pnpm run lint:rust && pnpm run lint:js",
    "lint:rust": "cargo clippy --features wasm",
    "lint:js": "eslint src --ext .ts"
  },
  "dependencies": {
    "typescript": "5.7.3",
    "vite": "6.0.7",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.39.2",
    "typescript-eslint": "^8.50.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
