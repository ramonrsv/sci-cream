{
  "name": "@workspace/sci-cream",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:rust && pnpm build:wasm && pnpm build:js",
    "build:rust": "cargo rustc --features wasm --crate-type=cdylib",
    "build:wasm": "pnpm set-crate-type:cdylib && pnpm wasm-pack-build && pnpm set-crate-type:rlib",
    "build:js": "vite build",
    "wasm-pack-build": "wasm-pack build --out-dir wasm --out-name index -- --features wasm",
    "set-crate-type:cdylib": "./scripts/set-crate-type.sh ./Cargo.toml cdylib",
    "set-crate-type:rlib": "./scripts/set-crate-type.sh ./Cargo.toml rlib",
    "test": "pnpm test:rust && pnpm test:js",
    "test:rust": "cargo test --features wasm",
    "test:js": "pnpm build:wasm && pnpm build:js && vitest run",
    "lint": "pnpm lint:rust && pnpm lint:js",
    "lint:rust": "cargo clippy --features wasm",
    "lint:js": "eslint src --ext .ts",
    "prettier": "prettier --check ./src/ts",
    "coverage": "pnpm build:wasm && pnpm build:js && pnpm coverage:rust && pnpm coverage:js",
    "coverage:rust": "pnpm coverage:rust:generate && pnpm coverage:rust:codecov && pnpm coverage:rust:html",
    "coverage:rust:generate": "cargo llvm-cov test --all-features",
    "coverage:rust:codecov": "cargo llvm-cov report --codecov --output-path ./target/codecov_code_coverage.json",
    "coverage:rust:html": "cargo llvm-cov report --html",
    "coverage:js": "vitest run --coverage"
  },
  "dependencies": {
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "^9.39.2",
    "jsdom": "^27.3.0",
    "typescript-eslint": "^8.50.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
