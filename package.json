{
  "name": "sci-cream-workspace",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "pnpm build:package && pnpm build:app",
    "build:app": "pnpm --filter sci-cream-app build",
    "build:package": "pnpm --filter sci-cream build:package",
    "test": "pnpm run -r test",
    "lint": "pnpm run -r lint",
    "prettier": "pnpm run -r prettier",
    "coverage": "pnpm run -r coverage",
    "dev": "pnpm --filter sci-cream-app dev",
    "start": "pnpm --filter sci-cream-app start"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
