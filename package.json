{
  "name": "sci-cream-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "pnpm run build:wasm && pnpm run build:sci-cream && pnpm run build:app",
    "build:wasm": "wasm-pack build ./packages/sci-cream --out-dir wasm --out-name index",
    "build:sci-cream": "pnpm --filter sci-cream build",
    "build:app": "next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@workspace/sci-cream": "workspace:*",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "next": "15.4.5",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "typescript": "5.7.3",
    "vite": "6.0.7",
    "vite-plugin-wasm": "3.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}